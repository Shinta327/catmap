<h2>Sign up</h2>

<%= form_with model: @group, url: group_registration_path, id: 'new_group', class: 'new_group', local: true do |f| %>
  <%= render "groups/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, '名前' %></br>
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email, 'メールアドレス' %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :postal_code, '郵便番号（ハイフンなし）' %></br>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :address, '住所' %></br>
    <%= f.text_area :address %>
  </div>

  <div class="field">
    <%= f.label :password, 'パスワード（半角英数字６文字以上）' %></br>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'パスワード（確認用）' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :url, 'サイトURL' %></br>
    <%= f.text_field :url %>
  </div>

  <div class="field">
    <%= f.label :explanation, '団体紹介' %></br>
    <%= f.text_area :explanation %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<% render "residents/shared/links" %>
