<h1>保護団体編集ページです</h1>

<%= form_with model: @group, url: group_path, local: true do |f| %>

  <div class="field">
    <%= f.label :name, '名前' %></br>
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email, 'メールアドレス' %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :postal_code, '郵便番号（ハイフンなし）' %></br>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :address, '住所' %></br>
    <%= f.text_area :address %>
  </div>

  <div class="field">
    <%= f.label :url, 'サイトURL' %></br>
    <%= f.text_field :url %>
  </div>

  <div class="field">
    <%= f.label :explanation, '団体紹介' %></br>
    <%= f.text_area :explanation %>
  </div>


  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<div><%= link_to '退会', group_withdrawal_path, method: :patch, "data-confirm"=>"本当に退会しますか？" %></div>