<div class="col-3 bg-light sidebar overflow-auto">
  <%= render "/cats/sideindex/", cats: @cats %>
</div>

<div class="show col-9">
  <div class="container mt-5">
    <div class="row">
      <div class="col-10 offset-md-1">
        <h1 class="fas fa-address-card"></h1>
        <table class="table">
          <tbody>
            <tr>
              <th>名前</th>
              <td><%= current_group.name %></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><%= current_group.email %></td>
            </tr>
            <tr>
              <th>郵便番号</th>
              <td><%= current_group.postal_code %></td>
            </tr>
            <tr>
              <th>住所</th>
              <td><%= current_group.address %></td>
            </tr>
            <tr>
              <th>サイトURL</th>
              <td><%= current_group.url %></td>
            </tr>
            <tr>
              <th>団体紹介</th>
              <td><%= current_group.explanation %></td>
            </tr>
          </tbody>
        </table>
        <div class="text-right">
          <%= link_to '編集', edit_group_path, class: "btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
</div>