<div class="container-fluid">
  <div class="row justify-content-center align-items-center" style="height: calc(100vh - 76px);">
    <div class="mb-5" style="width: 30%;">
      <%= form_with model: @handle, local:true do |f| %>
      <%= f.hidden_field :status %>
      <h3 class="fas fa-paw text-black-50">対応詳細編集</h3>
      <div class="mb-4">
        <%= f.text_area :detail, class: "form-control", rows: 8 %>
        <%= render '/layouts/error_messages', model: @handle, attribute: :detail %>
      </div>
      <div>
        <%= f.submit "編集する", class: "btn btn-secondary btn-block" %>
      </div>
      <% end %>
    </div>
  </div>
</div>

