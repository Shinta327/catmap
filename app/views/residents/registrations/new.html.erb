<div class="container-fluid">
  <div class="row justify-content-center align-items-center" style="height: calc(100vh - 76px);">
     <%= form_with model: @resident, url: resident_registration_path, class: "form-signup", local: true do |f| %>
      <div class="field mb-4 text-center">
        <%= image_tag 'logo.png', :size => '100x100' %>
      </div>
      <div class="field mb-2">
        <p class="fas fa-paw">名前</p>
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
        <%= render "residents/shared/error_messages", resource: resource, attribute: :name %>
      </div>
      <div class="field mb-2">
        <p class="fas fa-paw">メールアドレス</p>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        <%= render "residents/shared/error_messages", resource: resource, attribute: :email %>
      </div>
      <div class="field mb-2">
        <p class="fas fa-paw">郵便番号（ハイフンなし）</p>
        <%= f.text_field :postal_code, class: "form-control" %>
        <%= render "residents/shared/error_messages", resource: resource, attribute: :postal_code %>
      </div>
      <div class="field mb-2">
        <p class="fas fa-paw">住所</p>
        <%= f.text_area :address, class: "form-control" %>
        <%= render "residents/shared/error_messages", resource: resource, attribute: :address %>
      </div>
      <div class="field mb-2">
        <p class="fas fa-paw">パスワード</p>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        <%= render "residents/shared/error_messages", resource: resource, attribute: :password %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="actions text-center">
        <%= f.submit "登録", class: "btn btn-secondary btn-block" %>
      </div>
      <div class="mb-3">保護団体の方は<%= link_to 'こちら', new_group_registration_path %>から登録をお願いいたします。</div>
    <% end %>
  </div>
</div>


